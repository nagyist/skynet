<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
  <title>Skynet</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/chartist.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/jquery-1.11.2.min.js"></script>
    <script src="/js/chartist.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <script>
    $('.dropdown-toggle').dropdown()
    </script>

</head>
<body class="front">
<div class="container nav-container">
<nav class="navbar">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed front" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">
                <img src="img/sunseap_logo_trans.jpg">
      </a>   
    </div>

    <ul class="nav navbar-nav navbar-left">
       <div class="navlogo">
        SUNSEAP LEASING
      </div>
    </ul>

    <!-- Collect the nav links, forms, and other content for toggling -->
    
</nav>
</div>

    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
      <h3 class="text-center">Sunseap Energy Management System </h3>
      <p class="lead">Account Log In</p>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control loginpage" name="username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control loginpage" name="password">
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
                <a class="btn btn-info" href="/resetpassword">Reset Password</a>
            </form>

            <hr>
        </div>
    </div>



<footer class="footer footer-front">
  <div class="container">
    <div class="col-sm-12">
       <p class="navlogo" class="footer">
        POWERED BY 
    <img class="cclogo" src="/img/skynet_logo_white.png"> SKYNET 
      </p>    
    </div>
  </div>
</footer>

</body>
</html>
