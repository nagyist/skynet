<!-- views/edituser.ejs -->
<!doctype html>
<html>
<head><% include /partials/head %></head>
<body><header> <% include /partials/header %> </header>

<div class="container">


<div class="col-sm-6 col-sm-offset-3">

  <p class="lead">Edit User Access</p>

  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <!-- EDIT ASSET FORM -->
  <form action="/edituser/<%= accountname %>/<%= username %>" method="post">


    <div class="form-group">
      <label>Account</label>
      <input type="text" class="form-control" name="accountname" value="<%=accountname%>" readonly>
    </div>

    <div class="form-group">
      <label>Username</label>
      <input type="text" class="form-control" name="username" value="<%=username%>" readonly>
    </div>

    <div class="form-group">     
      <label for="roleid">Role</label>
      <select class="form-control" name="roleid">
        <option value='3'> User </option>
        <option value='2'> Manager </option>
          <% if (myrole < 2) {%>
          <option value='1'> Administrator </option>
          <% } %> 
      </select>
    </div>
    <button type="submit" name="submit" value ="edit" class="btn btn-warning btn-lg">Update User Settings</button>
    <button type="submit" name="submit" value ="delete" class="btn btn-danger btn-lg">Delete User</button>

  </form>

</div>



</div>
</body>
</html>
