<!-- views/viewasset.ejs -->
<!doctype html>
<html>
<head><% include /partials/head %></head>
<body><header> <% include /partials/header %> </header>
<div class="container">

<div class="col-sm-8 col-sm-offset-2">

  <p class="lead"> Meter List for <%= accountname %></p>
      <div class="col-sm-12">
        <table class="table table-hover">
        <thead>
          <tr>
            <td><strong>Meter ID</strong></td>
            <td><strong>Meter Name</strong></td>
            <td><strong>Readings</strong></td>
            <td><strong>Task</strong></td>
          </tr>
          </thead>
        <% assets.forEach(function(err, index) {%>
          <tr>
            <td><%=assets[index].assetid%> </td>
            <td><a href="../viewlivedata/<%=assets[index].assetid%>"><%=assets[index].assetname%> </td>
            <td><a href="../viewlivedata/<%=assets[index].assetid%>">Latest</a> / <a href="../viewdata/<%=assets[index].assetid%>">Report</a></td>
            <td><a href="/editasset/<%= accountname %>/<%=assets[index].assetid%>">Edit Meter</a></td>
          </tr>
        <% });%>
        </table>
      </div>

  <hr>

  <p><a href="export/assets_<%=accountname%>" role="button" class="btn btn-info">Export List</a>

</div>

</div>
</body>
</html>
