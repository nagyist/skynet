<!-- views/viewuser.ejs -->
<!doctype html>
<html>
<head><% include /partials/head %></head>
<body><header> <% include /partials/header %> </header>

<div class="container">

<div class="col-sm-8 col-sm-offset-2">

  <p class="lead">Access List for <%= accountname %></p>

        
      <div class="col-sm-12">

        <table class="table table-hover">
          <thead>
          <tr>
            <td><strong>Username</strong></td>
            <td><strong>Full Name</strong></td> 
            <td><strong>E-mail</strong></td>
            <td><strong>Role</strong></td>
            <td><strong>Task</strong></td>
          </tr>
          </thead>
        <% users.forEach(function(err, index) {%>
          <tr>
            <td><%=users[index].username%> </td>
            <% if (users[index].firstname == null) { %>
            <td> </td>

              <%} else {%>
            <td><%=users[index].firstname%> <%=users[index].lastname%> </td>

              <%}%>

            <td> <%=users[index].email%> </td>
            <td><%=users[index].rolename%></td>
            <td><a href="/edituser/<%= accountname %>/<%=users[index].username%>">Edit Role</a></td>
          </tr>
        <% });%>
        </table>
      </div>



  <hr>

  <a href="export/users_<%=accountname%>" role="button" class="btn btn-info">Export List</a>

</div>

</div>
</body>
</html>
